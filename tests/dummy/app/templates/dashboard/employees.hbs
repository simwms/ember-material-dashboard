{{#storefront-grid-cards as |grid|}}
  {{#each model as |employee|}}
    {{#storefront-textbase-card hasCta=true class=grid.cardClass as |card|}}
      {{#card.title}}{{employee.account.name}}{{/card.title}}
      <li class="{{card.listClass}} mdl-list__item--two-line">
        <span class="mdl-list__item-primary-content">
          <i class="material-icons mdl-list__item-avatar">assignment_ind</i>
          <span class="capitalize">{{employee.role}}</span>
          <span class="mdl-list__item-sub-title">Employee Role</span>
        </span>
      </li>
      <li class="{{card.listClass}} mdl-list__item--two-line">
        <span class="mdl-list__item-primary-content">
          <i class="material-icons mdl-list__item-avatar">schedule</i>
          <span class="capitalize">{{employee.account.timezone}}</span>
          <span class="mdl-list__item-sub-title">Warehouse Timezone</span>
        </span>
      </li>
      {{#card.cta}}
        <button class="{{card.ctaClass}}" 
          {{action "selectEmployee" employee}} 
          disabled={{isBusy}}>
          Select {{ma-icon "chevron_right"}}
        </button>
      {{/card.cta}}
    {{/storefront-textbase-card}}
  {{else}}
    {{matdash-blank-card}}
  {{/each}}
{{/storefront-grid-cards}}